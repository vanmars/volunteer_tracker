<br>
<div class="container">
  <h4 class="display-4 font-weight-lighter" style="color:#D8DDEF">Current Projects</h4>
  <br>
  <% if @projects.any? %>
    <table class="table table-striped" style="color: #D8DDEF; background-color: #7293A0">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Hours Completed</th>
        </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><a href="/projects/<%= project.id %>" style="color: #D8DDEF"><%= project.title %></a></td>
          <td>0</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p>There are currently no projects to display.</p>
  <% end %>


  <form action="/projects" method="post"> 
    <div class="form-group">
      <label for="title">Project Title</label>
      <input id="title" name="title" class="form-control" type="text" required>
    </div>
    <button type="submit" class="btn btn-dark">Create Project!</button>
  </form>

  
</div>

